{
  "manifest_version": 3,
  "name": "Supercharged Points Extractor",
  "version": "1.1",
  "description": "Intercepts Supercharged points and sends them to MB-Tracker.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://mb-tracker.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Supercharged Points Monitor"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "info@mb-tracker.com",
      "data_collection_permissions": {
        "required": [
          "websiteContent"
        ]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.winamax.de/*",
        "*://*.winamax.fr/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}